page{
  background-color: #f8f8f8;
}
.course_box{
  padding: 32rpx;
  display: flex;
  flex-wrap: wrap;
}
.course_mod{
  width: 333rpx;
  height: 368rpx;
  background-color: #fff;
  margin-top: 18rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.course_mod:nth-child(2n+1){
  margin-right: 18rpx;
}
.course_mod image{
  width: 124rpx;
  height: 124rpx;
  margin-top: 58rpx;
}
.course_mod .course_name{
  margin-top: 28rpx;
  color: #333;
  font-size: 32rpx;
  font-weight: 700;
}
.course_mod .course_intro{
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #a8a8a8;
}
.course_mod .course_grade{
  display: inline-block;
  width: 92rpx;
  height: 32rpx;
  border: 1px solid #ffb37a;
  margin-top: 22rpx;
  font-size: 16rpx;
  color: #ffb37a;
  text-align: center;
  line-height: 32rpx;
  border-radius: 16rpx;
}